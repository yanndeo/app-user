<?xml version="1.0" ?>
<!--  https://pear.php.net/manual/en/package.php.php-codesniffer.annotated-ruleset.php -->
<!-- check & fix with : vendor/bin/phpcs  & vendor/bin/phpcbf -->
<ruleset name="My Custom Laravel PHPCS Rules">
 
    <description>PHPCS ruleset.</description>
 
    <file>tests</file>
    <file>app</file>
    
    <exclude-pattern>app/Http/Kernel.php</exclude-pattern>
    <exclude-pattern>app/Providers/*</exclude-pattern>
    <exclude-pattern>app/Http/Middleware/*</exclude-pattern>
    <exclude-pattern>vendor/*</exclude-pattern>

    <!-- Show progress of the run -->
    <arg value="p" />
 
    <!-- Show sniff codes in all reports -->
    <arg value="s" />
 
    <!-- Our base rule: set to PSR12 -->
    <rule ref="PSR12">
        <exclude name="PSR12.Operators.OperatorSpacing.NoSpaceBefore" />
        <exclude name="PSR12.Operators.OperatorSpacing.NoSpaceAfter" />
        <exclude name="PSR12.Traits.UseDeclaration.MultipleImport" />
    </rule>
 
    <rule ref="Generic.Files.LineLength">
        <properties>
            <property name="lineLimit" value="80" />
            <property name="absoluteLineLimit" value="120" />
        </properties>
    </rule>
   <!-- exclude  NotCamelCaps into tests -->
    <rule ref="PSR1.Methods.CamelCapsMethodName.NotCamelCaps">
        <exclude-pattern>tests/</exclude-pattern>
    </rule>
 
</ruleset>
